@page
@model BSCare.Pages.repair.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Repair</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Repair.ExpensesId" />
            <div class="form-group">
                <label asp-for="Repair.ReportId" class="control-label"></label>
                <select asp-for="Repair.ReportId" class="form-control" asp-items="ViewBag.ReportId"></select>
                <span asp-validation-for="Repair.ReportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.RepairAction" class="control-label"></label>
                <input asp-for="Repair.RepairAction" class="form-control" />
                <span asp-validation-for="Repair.RepairAction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.ActionPrice" class="control-label"></label>
                <input asp-for="Repair.ActionPrice" class="form-control" />
                <span asp-validation-for="Repair.ActionPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.StopCode" class="control-label"></label>
                <input asp-for="Repair.StopCode" class="form-control" />
                <span asp-validation-for="Repair.StopCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
